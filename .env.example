# Server
PORT=3000


# Configuration de la base de donn√©es Neon
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require


JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Code Secret pour devenir Admin
ADMIN_SECRET=AmdinSecret

# OpenAI
OPENAI_API_KEY=sk-ta_cle_ici

#GEMINI
GEMINI_API_KEY=ta_cle_gemini

# Vera
VERA_API_KEY=ta_cle_vera_ici

#Telegram Bot
TELEGRAM_BOT_TOKEN=token_telegram

#Domain ?
DOMAIN_URL=quel_domaine?

# ============================================
# CONFIGURATION CLUSTERING SEMANTIQUE
# ============================================

# Seuil de similarite (0.0 - 1.0, defaut: 0.80)
CLUSTERING_SIMILARITY_THRESHOLD=0.80

# Modele d'embeddings (defaut: Xenova/all-MiniLM-L6-v2)
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# Dimension des embeddings (defaut: 384)
EMBEDDING_DIMENSION=384

# Longueur minimale des questions (defaut: 3)
MIN_QUESTION_LENGTH=3

# Longueur maximale des questions (defaut: 512)
MAX_QUESTION_LENGTH=512

# TTL du cache des clusters en ms (defaut: 300000 = 5 min)
CLUSTER_CACHE_TTL=300000

# Nombre max de clusters en cache (defaut: 1000)
MAX_CACHED_CLUSTERS=1000

# Nombre de top clusters par defaut (defaut: 10)
DEFAULT_TOP_CLUSTERS=10
